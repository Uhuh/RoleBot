{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": [
    "src/",
    "events/",
    "commands/",
    "utilities/"
  ],
  "compileOnSave": true
}
